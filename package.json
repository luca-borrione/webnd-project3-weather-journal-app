{
  "devDependencies": {
    "@linthtml/linthtml": "^0.7.2",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "husky": ">=6",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.0",
    "prettier-plugin-sort-json": "^0.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "scripts": {
    "format": "npm-run-all --parallel format:*",
    "format:css": "$npm_execpath run lint:css --fix",
    "format:html": "prettier --write 'website/**/*.html'",
    "format:js": "$npm_execpath run lint:js --fix",
    "format:json": "prettier --write '*.json'",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint 'website/**/*.css'",
    "lint:html": "linthtml 'website/**/*.html'",
    "lint:js": "eslint . --ext .js",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --cache --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --no-stash"
    }
  }
}
